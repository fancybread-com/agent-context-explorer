{
	"name": "agent-context-explorer",
	"displayName": "Agent Context Explorer (ACE)",
	"description": "Provide rich project context to AI agents across multiple workspaces",
	"version": "0.9.6",
	"publisher": "fancybread-com",
	"icon": "ace-icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/fancybread-com/agent-context-explorer"
	},
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"keywords": [
		"context",
		"agents",
		"cursor",
		"rules",
		"multi-project",
		"mcp"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"mcpServerDefinitionProviders": [
			{
				"id": "ace-mcp",
				"label": "Agent Context Explorer"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ace",
					"title": "Agent Context Explorer",
					"icon": "$(compass-dot)"
				}
			]
		},
		"views": {
			"ace": [
				{
					"id": "aceExplorer",
					"name": "ACE Workspaces",
					"when": "workspaceFolderCount > 0"
				}
			]
		},
		"commands": [
			{
				"command": "ace.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "ace.addProject",
				"title": "Add Project",
				"icon": "$(add)"
			},
			{
				"command": "ace.removeProject",
				"title": "Remove Project",
				"icon": "$(trash)"
			},
			{
				"command": "ace.editProject",
				"title": "Edit Project",
				"icon": "$(edit)"
			},
			{
				"command": "ace.listProjects",
				"title": "List Projects",
				"icon": "$(list)"
			},
			{
				"command": "ace.viewStateSection",
				"title": "View State Section",
				"icon": "$(eye)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ace.refresh",
					"when": "view == aceExplorer",
					"group": "navigation"
				},
				{
					"command": "ace.addProject",
					"when": "view == aceExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ace.editProject",
					"when": "view == aceExplorer && viewItem == activeProject",
					"group": "inline"
				},
				{
					"command": "ace.removeProject",
					"when": "view == aceExplorer && viewItem == activeProject",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "tsc -p ./",
		"package": "vite build && vite build --config vite.config.mcp.ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run compile:test && npm run lint",
		"compile:test": "tsc -p ./test",
		"lint": "eslint src --ext ts",
		"test": "node out/test/runTest.js",
		"test:unit": "mocha",
		"test:ci": "npm run compile && npm run compile:test && npm run test",
		"test:coverage": "nyc npm run test:unit",
		"ci": "npm run lint && npm run test:ci",
		"ci:coverage": "npm run lint && npm run test:coverage"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.0",
		"@types/node": "^25.2.1",
		"@types/vscode": "^1.105.0",
		"@typescript-eslint/eslint-plugin": "^8.50.1",
		"@typescript-eslint/parser": "^8.50.1",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^9.39.1",
		"glob": "^13.0.0",
		"mocha": "^11.7.5",
		"nyc": "^17.1.0",
		"ts-node": "^10.9.0",
		"typescript": "^5.4.0",
		"vite": "^7.3.1",
		"vscode": "file:./test/vscode-stub"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.26.0",
		"gray-matter": "^4.0.3",
		"yaml": "^2.3.0",
		"zod": "^3.25.76"
	}
}

{
	"name": "agent-context-explorer",
	"displayName": "Agent Context Explorer (ACE)",
	"description": "Provide rich project context to AI agents across multiple workspaces",
	"version": "0.8.1",
	"publisher": "fancybread-com",
	"icon": "pre.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/fancybread-com/agent-context-explorer"
	},
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"keywords": [
		"context",
		"agents",
		"cursor",
		"rules",
		"multi-project"
	],
	"activationEvents": [
		"onView:aceExplorer",
		"onCommand:ace.addProject",
		"onCommand:ace.refresh",
		"onCommand:ace.listProjects",
		"onCommand:ace.exportForAgent"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ace",
					"title": "Agent Context Explorer",
					"icon": "$(preview)"
				}
			]
		},
		"views": {
			"ace": [
				{
					"id": "aceExplorer",
					"name": "Commands, Rules & State",
					"when": "workspaceFolderCount > 0"
				}
			]
		},
		"commands": [
			{
				"command": "ace.createRule",
				"title": "Create Rule",
				"icon": "$(add)"
			},
			{
				"command": "ace.deleteRule",
				"title": "Delete Rule",
				"icon": "$(trash)"
			},
			{
				"command": "ace.copyRule",
				"title": "Copy Rule",
				"icon": "$(copy)"
			},
			{
				"command": "ace.renameRule",
				"title": "Rename Rule",
				"icon": "$(edit)"
			},
			{
				"command": "ace.pasteRule",
				"title": "Paste Rule",
				"icon": "$(paste)"
			},
			{
				"command": "ace.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "ace.scanState",
				"title": "Scan Project State",
				"icon": "$(search)"
			},
			{
				"command": "ace.viewState",
				"title": "View State",
				"icon": "$(info)"
			},
			{
				"command": "ace.viewStateSection",
				"title": "View State Section",
				"icon": "$(eye)"
			},
			{
				"command": "ace.exportState",
				"title": "Export State",
				"icon": "$(export)"
			},
			{
				"command": "ace.addProject",
				"title": "Add Project",
				"icon": "$(add)"
			},
			{
				"command": "ace.removeProject",
				"title": "Remove Project",
				"icon": "$(trash)"
			},
			{
				"command": "ace.editProject",
				"title": "Edit Project",
				"icon": "$(edit)"
			},
			{
				"command": "ace.listProjects",
				"title": "List Projects",
				"icon": "$(list)"
			},
			{
				"command": "ace.exportForAgent",
				"title": "Export All for Agent",
				"icon": "$(export)"
			},
			{
				"command": "ace.deleteRule",
				"title": "Delete Rule",
				"icon": "$(trash)"
			},
			{
				"command": "ace.copyRule",
				"title": "Copy Rule",
				"icon": "$(copy)"
			},
			{
				"command": "ace.pasteRule",
				"title": "Paste Rule",
				"icon": "$(paste)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ace.refresh",
					"when": "view == aceExplorer",
					"group": "navigation"
				},
				{
					"command": "ace.addProject",
					"when": "view == aceExplorer",
					"group": "navigation"
				},
				{
					"command": "ace.exportForAgent",
					"when": "view == aceExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ace.viewRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "inline"
				},
				{
					"command": "ace.editRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "inline"
				},
				{
					"command": "ace.copyRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "inline"
				},
				{
					"command": "ace.deleteRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "inline"
				},
				{
					"command": "ace.editProject",
					"when": "view == aceExplorer && viewItem == activeProject",
					"group": "inline"
				},
				{
					"command": "ace.removeProject",
					"when": "view == aceExplorer && viewItem == activeProject",
					"group": "inline"
				},
				{
					"command": "ace.createRule",
					"when": "view == aceExplorer && viewItem == rules",
					"group": "inline"
				},
				{
					"command": "ace.pasteRule",
					"when": "view == aceExplorer && viewItem == rules",
					"group": "inline"
				},
				{
					"command": "ace.copyRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "1_actions"
				},
				{
					"command": "ace.renameRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "1_actions"
				},
				{
					"command": "ace.deleteRule",
					"when": "view == aceExplorer && viewItem == rule",
					"group": "1_actions"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run compile:test && npm run lint",
		"compile:test": "tsc -p ./test",
		"lint": "eslint src --ext ts",
		"test": "node out/test/runTest.js",
		"test:unit": "mocha",
		"test:ci": "npm run compile && npm run compile:test && npm run test",
		"test:coverage": "nyc npm run test:unit",
		"ci": "npm run lint && npm run test:ci"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.0",
		"@types/node": "^25.0.3",
		"@types/vscode": "^1.105.0",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.50.1",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^9.39.1",
		"glob": "^13.0.0",
		"mocha": "^11.7.5",
		"nyc": "^17.1.0",
		"ts-node": "^10.9.0",
		"typescript": "^5.4.0"
	},
	"dependencies": {
		"gray-matter": "^4.0.3",
		"yaml": "^2.3.0"
	}
}
